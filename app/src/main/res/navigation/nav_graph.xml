<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/classes_fragment">

    <fragment
        android:id="@+id/classes_fragment"
        android:name="com.app.scheduler.ClassesFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_classes">
        <action
            android:id="@+id/show_item_detail"
            app:destination="@id/tasks_fragment" />
    </fragment>
    <fragment
        android:id="@+id/tasks_fragment"
        android:name="com.app.scheduler.TasksFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_tasks">
        <argument
            android:name="band_id"
            android:defaultValue="1"
            app:argType="integer" />
    </fragment>
</navigation>